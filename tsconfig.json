{
	"compilerOptions": {
	  "module": "CommonJS",
	  "moduleResolution": "node",
	  "target": "ES2020",
	  "outDir": "dist",
	  "esModuleInterop": true,
	  "allowSyntheticDefaultImports": true,
	  "strict": true,
	  "skipLibCheck": true,
	  "baseUrl": ".",
	  "paths": {
		"~/*": ["src/*"]
	  }
	},
	"ts-node": {
	  "require": ["tsconfig-paths/register"]
	},
	"include": ["src", "*.ts", "prisma/seed.ts"],
	"exclude": ["node_modules", "dist"]
  }
  